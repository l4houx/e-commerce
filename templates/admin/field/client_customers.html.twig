<div class="card">
    <div class="card-header" id="header-customers">
        <h2 class="mb-0">
            <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse" data-target="#collapse-customers" aria-expanded="false" aria-controls="collapse-customers">
                {{ 'Users list'|trans }} ({{ field.value|length }})
            </button>
        </h2>
    </div>
    <div id="collapse-customers" class="collapse" aria-labelledby="header-customers">
        <ul class="list-group list-group-flush">
            {% for client in field.value %}
                <li class="list-group-item">
                    {{ client.fullName }}
                </li>
            {% else %}
            <li class="list-group-item">
                {{ 'No users'|trans }}
            </li>
            {% endfor %}
        </ul>
    </div>
</div>
