{% if field.value == "-2" %}
	<span class="badge badge-danger">{{ 'Failed'|trans }}</span>
{% elseif field.value == "-1" %}
	<span class="badge badge-danger">{{ 'Canceled'|trans }}</span>
{% elseif field.value == "0" %}
	<span class="badge badge-warning">{{ 'Awaiting payment'|trans }}</span>
{% elseif field.value == "1" %}
	<span class="badge badge-success">{{ 'Paid'|trans }}</span>
{% else %}
	<span class="badge badge-primary">{{ 'Unknown'|trans }}</span>
{% endif %}
