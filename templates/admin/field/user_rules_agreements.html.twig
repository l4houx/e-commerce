<div class="card">
    <div class="card-header" id="header-rules">
        <h2 class="mb-0">
            <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse" data-target="#collapse-rules" aria-expanded="false" aria-controls="collapse-rules">
                {{ 'Regulations accepted/refused'|trans }}
            </button>
        </h2>
    </div>
    <div id="collapse-rules" class="collapse" aria-labelledby="header-rules">
        <ul class="list-group list-group-flush">
            {% for rules_agreement in field.value %}
                <li class="list-group-item justify-content-between align-items-center">
                    {{ 'Regulations published on'|trans }} {{ rules_agreement.rules.publishedAt | format_date('long') }}
                    {% if rules_agreement.accepted %}
                        <span class="ml-5 badge badge-success badge-pill">
                            {{ 'Accepted on'|trans }} {{ rules_agreement.agreedAt | format_date('long') }}
                        </span>
                    {% else %}
                        <span class="ml-5 badge badge-danger badge-pill">
                            {{ 'Refused the'|trans }} {{ rules_agreement.agreedAt | format_date('long') }}
                        </span>
                    {% endif %}
                </li>
            {% else %}
                <li class="list-group-item">
                    {{ 'No regulations'|trans }}
                </li>
            {% endfor %}
        </ul>
    </div>
</div>
