{% extends 'base.html.twig' %}

{% set pagetitle = 'Testimonials '|trans ~ testimonial.name %}
{% block title pagetitle %}

{% block body %}
    <section class="pt-sm-7">
        <div class="container pt-3 pt-xl-5">
            <div class="row">
                {% include "global/dashboard-items-navbar-vertical.html.twig" with {activerd: 'testimonial_index'} %}
                <div class="col-lg-8 col-xl-9 ps-lg-4 ps-xl-6">
                    <div class="d-flex justify-content-between align-items-center mb-5 mb-sm-6">
                        <h1 class="h3 mb-0">{{ pagetitle }}</h1>
                        <button class="btn btn-primary d-lg-none flex-shrink-0 ms-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasSidebar" aria-controls="offcanvasSidebar">
                            <i class="fas fa-sliders-h"></i> {{ 'Menu'|trans }}
                        </button>
                    </div>
                    <div class="table-responsive overflow-y-hslugden">
                        <table class="table table-borderless table-striped table-hover table-sm">
                            <thead class="">
                                <tr>
                                    <th colspan="2">
                                        <i class="fas fa-file fa-fw text-muted"></i>
                                        {{ "General information"|trans }}
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                {% if is_granted("ROLE_ADMIN_APPLICATION") %}
                                    <tr>
                                        <td wslugth="30%">#</th>
                                        <td>{{ testimonial.id }}</td>
                                    </tr>
                                {% endif %}
                                <tr>
                                    <td wslugth="30%">{{ 'Avatar'|trans }}</th>
                                    <td>
                                        {% include "global/user-avatar.html.twig" with { user: testimonial.author, type: "xl", class: "img-fluid w-80px" } %}
                                    </td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Full name'|trans }}</th>
                                    <td>{{ testimonial.author.getFullName | lower | capitalize }}</td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Email'|trans }}</th>
                                    <td>{{ testimonial.author.email }}</td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Author'|trans }}</th>
                                    <td>{{ testimonial.author.username }}</td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Name'|trans }}</th>
                                    <td>{{ testimonial.name }}</td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Content'|trans }}</th>
                                    <td>{{ testimonial.content | html_markdown }}</td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Rating'|trans }}</th>
                                    <td>
                                    {% include 'global/rating.html.twig' with {'rating' : testimonial.rating, 'class' : 'fs-6 align-top'} %}</td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Status'|trans }}</th>
                                    <td>
                                        {% if testimonial.isOnline == false %}
                                            <i class="fa-solid fa-circle fa-2xs text-danger me-2"></i>{{ "Offline"|trans }}
                                            <br>
                                        {% else %}
                                            <i class="fa-solid fa-circle fa-2xs text-success me-2"></i>{{ "Online"|trans }}
                                            <br>
                                        {% endif %}
                                        {% if testimonial.deletedAt %}
                                            <i class="fa-solid fa-circle fa-2xs text-danger-soft me-2"></i>{{ "Deleted"|trans }}
                                            <br>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Creation date'|trans }}</th>
                                    <td>{{ testimonial.createdAt ? testimonial.createdAt | localizeddate('medium', 'short', app.request.locale, date_timezone, date_format) : '' }}</td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Update date'|trans }}</th>
                                    <td>{{ testimonial.updatedAt ? testimonial.updatedAt | localizeddate('medium', 'short', app.request.locale, date_timezone, date_format) : '' }}</td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Deleted date'|trans }}</th>
                                    <td>{{ testimonial.deletedAt ? testimonial.deletedAt | localizeddate('medium', 'short', app.request.locale, date_timezone, date_format) : '' }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="d-flex pb-3 my-3">
                        {% if is_granted("ROLE_ADMIN_APPLICATION") %}
                            <a href="{{ path('dashboard_admin_testimonial_index') }}" class="btn btn-sm btn-dark me-2">
                                <i class="fas fa-list fa-fw"></i>
                            </a>
                        {% elseif is_granted("ROLE_USER") %}
                            <a href="{{ path('dashboard_user_testimonial_index') }}" class="btn btn-sm btn-dark me-2">
                                <i class="fas fa-list fa-fw"></i>
                            </a>
                        {% endif %}
                        {% if is_granted('ROLE_ADMIN_APPLICATION') %}
                            <a href="{{ path('dashboard_admin_testimonial_edit', {'slug': testimonial.slug}) }}" class="btn btn-primary btn-sm me-2">
                                <i class="fas fa-pencil fa-fw"></i>
                            </a>
                            {{ include('dashboard/shared/testimonials/_delete_form.html.twig') }}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
