{% extends 'base.html.twig' %}

{% set pagetitle = 'Add a new review for %productname%'|trans({'%productname%': product.name}) %}
{% block title pagetitle %}

{% block body %}
    <section class="pt-sm-7">
        <div class="container pt-3 pt-xl-5">
            <div class="row">
                {% include "global/dashboard-items-navbar-vertical.html.twig" with {activerd: 'review_new'} %}
                <div class="col-lg-8 col-xl-9 ps-lg-4 ps-xl-6">
                    <div class="d-flex justify-content-between align-items-center mb-5 mb-sm-6">
                        <h1 class="h3 mb-0">
                            {{ 'Review'|trans }}
                        </h1>
                        <button class="btn btn-primary d-lg-none flex-shrink-0 ms-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasSidebar" aria-controls="offcanvasSidebar">
                            <i class="fas fa-sliders-h"></i> {{ 'Menu'|trans }}
                        </button>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div>
                                <h5 class="mb-4">
                                    {{ 'Product'|trans }}:
                                    <a href="{{ path('shop_product', { slug: product.slug }) }}" class="text-body-secondary text-primary-hover small">
                                        {{ product.name }}
                                    </a>
                                </h5>
                            </div>
                        </div>
                        <div class="col-md-8 col-lg-12 col-xl-8">
                            <div class="border rounded-2 p-4">
                                <div class="row">
                                    <div class="col-md-5">
                                        <h2 class="mb-0">
                                            {{ product.getRatingAvg }}/5
                                        </h2>
                                        <div class="rating-wrap">
                                            <ul class="list-inline mb-2 rating-stars">
                                                <li style="width:{{product.getRatingPercentage}}%" class="stars-active">
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                </li>
                                                <li>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                </li>
                                            </ul>
                                            <div class="label-rating mb-2">
                                                {{ product.getRatingAvg }} {{"out of 5 stars"|trans|lower}}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-7">
                                        <div class="d-flex align-items-center">
                                            <div class="progress progress-sm bg-warning bg-opacity-15 w-100 me-3">
                                                <div class="progress-bar bg-warning" role="progressbar" style="width: {{ product.getRatingsPercentageForRating(5) }}%;" aria-valuenow="{{ product.getRatingsPercentageForRating(5) }}" aria-valuemin="0" aria-valuemax="100">
                                                </div>
                                            </div>
                                            <span class="heading-color">5</span>
                                        </div>
                                        <div class="d-flex align-items-center">
                                            <div class="progress progress-sm bg-warning bg-opacity-15 w-100 me-3">
                                                <div class="progress-bar bg-warning" role="progressbar" style="width: {{ product.getRatingsPercentageForRating(4) }}%;" aria-valuenow="{{ product.getRatingsPercentageForRating(4) }}" aria-valuemin="0" aria-valuemax="100">
                                                </div>
                                            </div>
                                            <span class="heading-color">4</span>
                                        </div>
                                        <div class="d-flex align-items-center">
                                            <div class="progress progress-sm bg-warning bg-opacity-15 w-100 me-3">
                                                <div class="progress-bar bg-warning" role="progressbar" style="width: {{ product.getRatingsPercentageForRating(3) }}%;" aria-valuenow="{{ product.getRatingsPercentageForRating(3) }}" aria-valuemin="0" aria-valuemax="100">
                                                </div>
                                            </div>
                                            <span class="heading-color">3</span>
                                        </div>
                                        <div class="d-flex align-items-center">
                                            <div class="progress progress-sm bg-warning bg-opacity-15 w-100 me-3">
                                                <div class="progress-bar bg-warning" role="progressbar" style="width: {{ product.getRatingsPercentageForRating(2) }}%;" aria-valuenow="{{ product.getRatingsPercentageForRating(2) }}" aria-valuemin="0" aria-valuemax="100">
                                                </div>
                                            </div>
                                            <span class="heading-color">2</span>
                                        </div>
                                        <div class="d-flex align-items-center">
                                            <div class="progress progress-sm bg-warning bg-opacity-15 w-100 me-3">
                                                <div class="progress-bar bg-warning" role="progressbar" style="width: {{ product.getRatingsPercentageForRating(1) }}%;" aria-valuenow="{{ product.getRatingsPercentageForRating(1) }}" aria-valuemin="0" aria-valuemax="100">
                                                </div>
                                            </div>
                                            <span class="heading-color">1</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {#  
                        <div class="col-md-4 col-lg-12 col-xl-4">
                            <div class="mt-5">
                                <h5 class="mb-4">
                                    <a href="{{ path('shop_product', { slug: product.slug }) }}" class="text-body-secondary text-primary-hover small">
                                        {{ product.name }}
                                    </a>
                                </h5>
                                <div class="row g-4">
                                    {% set runtimeConfig = {"scale": {"dim": [150, 150] }} %}
                                    <div class="col-4 col-sm-2 col-lg-3">
                                        <a class="w-100 h-100" data-glightbox="" data-gallery="gallery" href="{{ product.getImagePath|imagine_filter('scale', runtimeConfig) }}">
                                            <div class="card card-element-hover overflow-hidden">
                                                <img src="{{ product.getImagePath|imagine_filter('scale', runtimeConfig) }}" class="rounded-3" alt="">
                                                <div class="hover-element w-100 h-100">
                                                    <i class="bi bi-fullscreen fs-6 text-white position-absolute top-50 start-50 translate-middle bg-dark rounded-1 p-2 lh-1"></i>
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        #}
                    </div>
                    <div class="text-center my-5"><i class="fas fa-ellipsis"></i></div>
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'} }) }}
                        {{ form_widget(form._token) }}
                        {{ form_errors(form) }}
                        <div class="card bg-transparent p-0">
                            <div class="card-header bg-transparent border-bottom px-0">
                                <h6 class="mb-0">{{ pagetitle }}</h6>
                            </div>
                            <div class="card-body px-0">
                                <div class="mb-3">
                                    {% component alert with {type: 'info', closeButton: false} %}
                                        {% block content %}
                                            {{ 'The fields preceded with a red * are mandatory'|trans }}
                                        {% endblock %}
                                    {% endcomponent %}
                                </div>
                                {{ form_widget(form) }}
                                <div class="d-flex justify-content-end mt-4">
                                    <button type="submit" class="btn btn-primary mb-0">
                                        {{ 'Post It'|trans }}
                                        <i class="fa-fw fas fa-arrow-right ms-2"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    {{ form_end(form, {'render_rest': false}) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
