{% extends 'base.html.twig' %}

{% set pagetitle = 'Change password'|trans %}
{% block title pagetitle %}

{% block body %}
    <section class="pt-sm-7">
        <div class="container pt-3 pt-xl-5">
            <div class="row">
                {% include "global/dashboard-items-navbar-vertical.html.twig" with {activerd: 'change_password'} %}
                <div class="col-lg-8 col-xl-9 ps-lg-4 ps-xl-6">
                    <div class="d-flex justify-content-between align-items-center mb-5 mb-sm-6">
                        <h1 class="h3 mb-0">{{ 'My profile'|trans }}</h1>
                        <button class="btn btn-primary d-lg-none flex-shrink-0 ms-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasSidebar" aria-controls="offcanvasSidebar">
                            <i class="fas fa-sliders-h"></i> {{ 'Menu'|trans }}
                        </button>
                    </div>
                    <div class="card bg-transparent p-0">
                        <div class="card-header bg-transparent border-bottom p-0 pb-3">
                            <h6 class="mb-0">{{ 'Account status'|trans }}</h6>
                        </div>
                        <div class="card-body px-0">
                            <div class="row g-4">
                                <div class="col-12">
                                    <p class="mb-0">
                                        <span>{{ 'Account status'|trans }}</span>
                                        <span class="text-success fw-semibold ms-2"><i class="fas fa-user-check"></i> {{ "Enabled"|trans }}</span>
                                        <span class="ms-3">{{ "Last login"|trans }}</span> 
                                        <span class="text-success fw-semibold ms-3">
                                            <i class="fas fa-hand-point-right"></i> {{ app.user.lastLogin | localizeddate('full', 'short', app.request.locale, date_timezone, date_format) }}
                                        </span>
                                        <span class="ms-3">{{ "Member since the"|trans }}</span>
                                        <span class="text-success fw-semibold ms-3">
                                            <i class="fas fa-user-plus"></i> 
                                            {{ app.user.createdAt | localizeddate('full', 'short', app.request.locale, date_timezone, date_format) }}
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="text-center my-5"><i class="fas fa-ellipsis"></i></div>
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'} }) }}
                        {{ form_widget(form._token) }}
                        {{ form_errors(form) }}
                        <div class="card bg-transparent p-0">
                            <div class="card-header bg-transparent border-bottom px-0">
                                <h6 class="mb-0">{{ 'Update password'|trans }}</h6>
                            </div>
                            <div class="card-body px-0">
                                <div class="mb-3">
                                    {% include "global/message.html.twig" with { type: "info", icon: "fas fa-exclamation", message: ("The fields preceded with a red * are mandatory"|trans) } %}
                                </div>
                                <div class="mb-3">
                                    {{ form_row(form.currentPassword) }}
                                </div>
                                <div class="mb-3">
                                    {{ form_row(form.newPassword.first) }}
                                </div>
                                <div>
                                    {{ form_row(form.newPassword.second) }}
                                </div>
                                <div class="d-flex justify-content-end mt-4">
                                    <button type="submit" class="btn btn-primary mb-0">{{ 'Change password'|trans }}</button>
                                </div>
                            </div>
                        </div>
                    {{ form_end(form, {'render_rest': false}) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
