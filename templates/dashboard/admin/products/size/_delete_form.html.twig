<form method="post" action="{{ path('dashboard_admin_product_size_delete', {'id': size.id}) }}" onsubmit="return confirm('{{ "Are you sure you want to delete this item?"|trans }}');">
    <input type="hidden" name="_token" value="{{ csrf_token('size_deletion_' ~ size.id) }}">
    <button class="btn btn-danger btn-sm">
        <i class="fas fa-trash fa-fw"></i>
        {{ "Delete"|trans }}
    </button>
</form>
