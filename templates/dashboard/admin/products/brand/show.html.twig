{% extends 'base.html.twig' %}

{% set pagetitle = 'Brand '|trans ~ brand.name %}
{% block title pagetitle %}

{% block breadcrumb %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-12">
            <div class="border-bottom pb-3 mb-3 d-md-flex align-items-center justify-content-between">
                {% set breadcrumb = [{ "dashboard_main": ('Dashboard' | trans), "dashboard_admin_product_brand_index": 'Manage brands'|trans, "current":(pagetitle) }] %}
                {% include "global/dashboard-breadcrumb.html.twig" with breadcrumb %}
                <div>
                    <a href="{{ path('dashboard_admin_product_brand_index') }}" class="btn btn-outline-secondary me-2">
                        {{ 'Return to list'|trans }}
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="table-responsive overflow-y-hidden">
                <table class="table table-borderless table-striped table-hover table-sm">
                    <thead class="">
                        <tr>
                            <th colspan="2">
                                <i class="fas fa-file text-muted"></i>
                                {{ "General information"|trans }}
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td width="30%">#</th>
                            <td>{{ brand.id }}</td>
                        </tr>
                        <tr>
                            <td width="30%">{{ 'Name'|trans }}</th>
                            <td>{{ brand.name }}</td>
                        </tr>
                        <tr>
                            <td width="30%">{{ 'Meta title'|trans }}</th>
                            <td>{{ brand.metaTitle }}</td>
                        </tr>
                        <tr>
                            <td width="30%">{{ 'Meta description'|trans }}</th>
                            <td>{{ brand.metaDescription | html_markdown | nl2br }}</td>
                        </tr>
                        <tr>
                            <td width="30%">{{ 'Status'|trans }}</th>
                            <td>
                                {% if brand.isActive == false %}
                                    <span class="badge bg-danger">
                                        <i class="fas fa-eye-slash"></i>
                                        {{ "Offline"|trans }}
                                    </span>
                                {% else %}
                                    <span class="badge bg-success">
                                        <i class="fas fa-eye"></i>
                                        {{ "Online"|trans }}
                                    </span>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <td width="30%">{{ 'Creation date'|trans }}</th>
                            <td>{{ brand.createdAt ? brand.createdAt | localizeddate('medium', 'short', app.request.locale, date_timezone, date_format) : '' }}</td>
                        </tr>
                        <tr>
                            <td width="30%">{{ 'Update date'|trans }}</th>
                            <td>{{ brand.updatedAt ? brand.updatedAt | localizeddate('medium', 'short', app.request.locale, date_timezone, date_format) : '' }}</td>
                        </tr>
                        <tr>
                            <td width="30%">{{ 'Deleted date'|trans }}</th>
                            <td>{{ brand.deletedAt ? brand.deletedAt | localizeddate('medium', 'short', app.request.locale, date_timezone, date_format) : '' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="d-flex pb-3 my-3">
                <a href="{{ path('dashboard_admin_product_brand_edit', {'id': brand.id}) }}" class="btn btn-primary btn-sm me-2">
                    <i class="fas fa-pencil fa-fw"></i>
                    {{ 'Edit'|trans }}
                </a>
                {{ include('dashboard/admin/products/brand/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
