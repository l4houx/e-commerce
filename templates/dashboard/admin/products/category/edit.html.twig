{% extends 'base.html.twig' %}

{% set pagetitle = 'Edit the category'|trans %}
{% block title pagetitle %}

{% block breadcrumb %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-12">
            <div class="border-bottom pb-3 mb-3 d-md-flex align-items-center justify-content-between">
                {% set breadcrumb = [{ "dashboard_main": ('Dashboard' | trans), "dashboard_admin_product_category_index": 'Manage product categories'|trans, "current":(pagetitle) }] %}
                {% include "global/dashboard-breadcrumb.html.twig" with breadcrumb %}
                <div>
                    <a href="{{ path('dashboard_admin_product_category_index') }}" class="btn btn-outline-secondary me-2">
                        {{ 'Return to list'|trans }}
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xl-9 col-lg-8 col-md-12 col-12">
            <div class="card border-0 mb-4">
                <div class="card-header">
                    <h4 class="mb-0">
                        {{ pagetitle }}
                        "{{ category.name }}"
                    </h4>
                </div>
                <turbo-frame id="category_{{ category.id }}">
                    {{ form_start(form, {'action': path('dashboard_admin_product_category_edit', {id: category.id}), 'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'} }) }}
                        <div class="card-body">
                            <div>
                                {% include "global/message.html.twig" with { type: "info", icon: "bi bi-exclamation-circle", message: ("The fields preceded with a red * are mandatory"|trans) } %}
                            </div>
                            {{ form_widget(form) }}
                            <div class="col-12 pt-2">
                                <button type="submit" class="btn btn-warning me-4">
                                    {{ 'Update'|trans }}
                                </button>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </turbo-frame>
            </div>
        </div>
        <div class="col-xl-3 col-lg-4 col-md-12 col-12"></div>
    </div>
{% endblock %}
