{% extends 'base.html.twig' %}

{% set pagetitle = 'Add a new stock for '|trans ~ product.name %}
{% block title pagetitle %}

{% block breadcrumb %}
	{% set breadcrumb = [{ "dashboard_main": ('Dashboard' | trans), "dashboard_admin_product_index": 'Manage products'|trans, "current":(pagetitle) }] %}
	{% include "global/breadcrumb.html.twig" with breadcrumb %}
{% endblock %}

{% block body %}
    <section class="pt-0">
        <div class="container">
            <div class="row">
                <div class="col-xl-9 col-lg-8 col-md-12 col-12">
                    {{ include('dashboard/admin/products/product/_form-stock.html.twig') }}
                </div>
                <div class="col-xl-3 col-lg-4 col-md-12 col-12"></div>
            </div>
        </div>
    </section>
{% endblock %}
