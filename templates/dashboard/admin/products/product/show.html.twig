{% extends 'base.html.twig' %}

{% set pagetitle = 'Product '|trans ~ product.name %}
{% block title pagetitle %}

{% block breadcrumb %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-12">
            <div class="border-bottom pb-3 mb-3 d-md-flex align-items-center justify-content-between">
                {% set breadcrumb = [{ "dashboard_main": ('Dashboard' | trans), "dashboard_admin_product_index": 'Manage products'|trans, "current":(pagetitle) }] %}
                {% include "global/dashboard-breadcrumb.html.twig" with breadcrumb %}
                <div>
                    <a href="{{ path('dashboard_admin_product_index') }}" class="btn btn-outline-secondary me-2">
                        {{ 'Return to list'|trans }}
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="table-responsive overflow-y-hidden">
                <table class="table mb-0 text-nowrap table-hover table-centered">
                    <thead class="">
                        <tr>
                            <th colspan="2">
                                <i class="fas fa-file text-muted"></i>
                                {{ pagetitle }}
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td width="30%">{{ 'Name'|trans }}</th>
                            <td>{{ product.name }}</td>
                        </tr>
                        <tr>
                            <td width="30%">{{ 'Content'|trans }}</th>
                            <td>{{ product.content | html_markdown | nl2br }}</td>
                        </tr>
                        <tr>
                            <td width="30%">{{ 'Price'|trans }}</th>
                            <td>{{ product.price / 100 }}</td>
                        </tr>
                        <tr>
                            <td width="30%">{{ 'Stock'|trans }}</th>
                            <td>{{ product.stock }}</td>
                        </tr>
                        <tr>
                            <td width="30%">{{ 'Brand'|trans }}</th>
                            <td>{{ product.brand }}</td>
                        </tr>
                        <tr>
                            <td width="30%">#</th>
                            <td>{{ product.id }}</td>
                        </tr>
                        <tr>
                            <td width="30%">{{ 'Created'|trans }}</th>
                            <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <td width="30%">{{ 'Updated'|trans }}</th>
                            <td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="d-md-flex pb-3 my-3">
                <a href="{{ path('dashboard_admin_product_edit', {'id': product.id}) }}" class="btn btn-primary btn-sm me-2">
                    <i class="fas fa-pencil fa-fw"></i>
                    {{ 'Edit'|trans }}
                </a>
                {{ include('dashboard/admin/products/product/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
