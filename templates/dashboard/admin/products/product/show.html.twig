{% extends 'base.html.twig' %}

{% set pagetitle = 'Product '|trans ~ product.name %}
{% block title pagetitle %}

{% block breadcrumb %}
	{% set breadcrumb = [{ "dashboard_main": ('Dashboard' | trans), "dashboard_admin_product_index": 'Manage products'|trans, "current":(pagetitle) }] %}
	{% include "global/breadcrumb.html.twig" with breadcrumb %}
{% endblock %}

{% block body %}
    <section class="pt-0">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="table-responsive overflow-y-hidden">
                                <table class="table table-borderless table-striped table-hover table-sm">
                                    <thead class="">
                                        <tr>
                                            <th colspan="2">
                                                <i class="fas fa-file text-muted"></i>
                                                {{ "General information"|trans }}
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td width="30%">{{ 'Name'|trans }}</th>
                                            <td>{{ product.name }}</td>
                                        </tr>
                                        <tr>
                                            <td width="30%">{{ 'Content'|trans }}</th>
                                            <td>{{ product.content | html_markdown | nl2br }}</td>
                                        </tr>
                                        <tr>
                                            <td width="30%">{{ 'Price'|trans }}</th>
                                            <td>{{ product.price / 100 }}</td>
                                        </tr>
                                        <tr>
                                            <td width="30%">{{ 'Stock'|trans }}</th>
                                            {% if product.stock > 0 %}
                                                <td>{{ product.stock }}</td>
                                            {% else %}
                                                <td><span class="text-danger me-2">{{ 'Out of stock'|trans }}</span></td>
                                            {% endif %}
                                        </tr>
                                        <tr>
                                            <td width="30%">{{ 'Brand'|trans }}</th>
                                            <td>{{ product.brand }}</td>
                                        </tr>
                                        <tr>
                                            <td width="30%">#</th>
                                            <td>{{ product.id }}</td>
                                        </tr>
                                        <tr>
                                            <td width="30%">{{ 'Meta title'|trans }}</th>
                                            <td>{{ product.metaTitle }}</td>
                                        </tr>
                                        <tr>
                                            <td width="30%">{{ 'Meta description'|trans }}</th>
                                            <td>{{ product.metaDescription | html_markdown | nl2br }}</td>
                                        </tr>
                                        <tr>
                                            <td width="30%">{{ "Views"|trans }}</th>
                                            <td><span class="text-decoration-none">{{ product.views }}</span></td>
                                        </tr>
                                        {#  
                                        <tr>
                                            <td width="30%">{{ 'Status'|trans }}</th>
                                            <td>
                                                {% if product.isActive == false %}
                                                    <span class="badge bg-danger">
                                                        <i class="fas fa-eye-slash"></i>
                                                        {{ "Offline"|trans }}
                                                    </span>
                                                {% else %}
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-eye"></i>
                                                        {{ "Online"|trans }}
                                                    </span>
                                                {% endif %}
                                            </td>
                                        </tr>
                                        #}
                                        <tr>
                                            <td width="30%">{{ 'Creation date'|trans }}</th>
                                            <td>{{ product.createdAt ? product.createdAt | localizeddate('medium', 'short', app.request.locale, date_timezone, date_format) : '' }}</td>
                                        </tr>
                                        <tr>
                                            <td width="30%">{{ 'Update date'|trans }}</th>
                                            <td>{{ product.updatedAt ? product.updatedAt | localizeddate('medium', 'short', app.request.locale, date_timezone, date_format) : '' }}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="table-responsive overflow-y-hidden">
                                <table class="table table-borderless table-striped table-hover table-sm">
                                    <thead>
                                        <tr>
                                            <th colspan="2">
                                                <i class="fas fa-file-image text-muted"></i>
                                                {{ "Images"|trans }}
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td width="30%">{{ "Main image"|trans }}</td>
                                            <td>
                                                <div class="mb-4">
                                                    <a class="glightbox" href="{{ product.imageName ? asset(product.getImagePath) : product.getImagePlaceholder }}" data-bs-toggle="tooltip" title="{{ "Enlarge"|trans }}">
                                                        <img src="{{ product.imageName ? asset(product.getImagePath) : product.getImagePlaceholder }}" class="rounded-3 img-fluid" />
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>{{ "Gallery"|trans }}</td>
                                            <td>
                                                {{ product.images | length }} {{ "image(s)"|trans }}
                                                <div class="gallery photos-gallery clearfix">
                                                    {% for image in product.images %}
                                                        <figure>
                                                            <a href="{{ asset(image.getImagePath) }}" data-size="{{ image.imageDimensions[0] }}x{{ image.imageDimensions[1] }}">
                                                                <img class="rounded img-4by3-lg" src="{{ image.getImagePath|imagine_filter('thumbnail') }}" alt="{{ product.name }}" />
                                                            </a>
                                                        </figure>
                                                    {% endfor %}
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex pb-3 my-3">
                        <a href="{{ path('dashboard_admin_product_index') }}" class="btn btn-sm btn-dark me-2">
                            <i class="fas fa-list fa-fw"></i>
                        </a>
                        <a href="{{ path('dashboard_admin_product_edit', {'id': product.id}) }}" class="btn btn-primary btn-sm me-2">
                            <i class="fas fa-pencil fa-fw"></i>
                        </a>
                        <a href="{{ path('dashboard_admin_product_add_stock_history', {'id': product.id}) }}" class="btn btn-success btn-sm me-2">
                            <i class="fas fa-plus fa-fw"></i>
                        </a>
                        {{ include('dashboard/admin/products/product/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
