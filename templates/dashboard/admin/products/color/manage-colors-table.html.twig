<div class="table-responsive overflow-y-hidden">
	<table class="table mb-0 text-nowrap table-hover table-centered">
		<thead class="">
			<tr>
				<th>#</th>
				<th>{{ 'Name'|trans }}</th>
                <th>{{ 'Hex'|trans }}</th>
                <th>{{ 'Display in search'|trans }}</th>
                <th>{{ 'Updated date'|trans }}</th>
                <th>{{ 'Status'|trans }}</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for color in rows %}
				{% set link = path('dashboard_admin_product_color_edit', { id : color.id }) %}
				<tr>
					<td>{{ color.id }}</td>
					<td>
						<div class="d-flex align-items-center">
							<div>
								<h6 class="mb-1" style="color: {{ color.hex }}">
									<a href="{{ link }}" target="_blank">
										{{ color.name }}
									</a>
								</h6>
								<p class="heading-color fw-normal small mb-2">
									{{ 'Published the'|trans }}: 
									<span class="text-primary">{{ color.createdAt ? color.createdAt | format_date('long') : '' }}</span>
								</p>
							</div>
						</div>
					</td>
					<td>
						<span class="text-decoration-none" style="color: {{ color.hex }}">
							{{ color.hex }}
						</span>
					</td>
                    <td>{{ color.displayInSearch }}</td>
                    <td>{{ color.updatedAt ? color.updatedAt | format_date('long') : '' }}</td>
                    <td>
						{% if color.isActive == false %}
							<i class="fa-solid fa-circle fa-2xs text-danger me-2"></i>{{ "Offline"|trans }}
							<br>
						{% else %}
							<i class="fa-solid fa-circle fa-2xs text-success me-2"></i>{{ "Online"|trans }}
							<br>
						{% endif %}
                    </td>
					<td>
						<div class="dropdown dropstart">
							<a class="btn-icon btn btn-ghost btn-sm rounded-circle" href="#" role="button" id="Dropdown1" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								<i class="fas fa-ellipsis-v"></i>
							</a>
							<div class="dropdown-menu" aria-labelledby="Dropdown1" style="">
								<span class="dropdown-header">{{ 'Settings'|trans }}</span>
								<a class="dropdown-item" href="{{ link }}">
									<i class="fas fa-pencil fa-fw dropdown-item-icon"></i>
									{{ 'Edit'|trans }}
								</a>
								<a class="dropdown-item" href="{{ path('dashboard_admin_product_color_show', {id : color.id }) }}">
									<i class="fas fa-eye fa-fw dropdown-item-icon"></i>
									{{ 'Show'|trans }}
								</a>
								<a href="#" onclick="event.preventDefault(); confirm('{{ "Are you sure you want to delete this item?"|trans }}') && document.getElementById('js-color-delete-form').submit();" class="dropdown-item">
									<i class="fas fa-trash fa-fw dropdown-item-icon"></i>
									{{ 'Delete'|trans }}
								</a>
								<form id="js-color-delete-form" action="{{ path('dashboard_admin_product_color_delete', {id : color.id }) }}" method="post" class="">
									<input type="hidden" name="_token" value="{{ csrf_token('color_deletion_' ~ color.id) }}">
									<input type="hidden" name="_method" value="DELETE">
								</form> 
							</div>
						</div>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<div class="card-footer bg-transparent text-end p-0">
		{{ knp_pagination_render(rows, null, {}, {'align': 'center'}) }}
	</div>
</div>
