<div class="table-responsive overflow-y-hidden">
	<table class="table mb-0 text-nowrap table-hover table-centered">
		<thead class="">
			<tr>
				<th>{{ 'Post'|trans}}</th>
				<th>{{ 'Type'|trans }}</th>
                <th>{{ 'Category'|trans }}</th>
				<th>{{ 'Views'|trans }}</th>
				<th>{{ 'Last updated'|trans }}</th>
				{# <th>{{ 'Author'|trans }}</th> #}
				<th>{{ 'Status'|trans }}</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for post in rows %}
				{% set link = path('dashboard_admin_post_edit', { slug : post.slug }) %}
				<tr>
					<td>
						<div class="d-flex align-items-center">
							<div>
								<img src="{{ post.imageName ? asset(post.getImagePath) : post.getImagePlaceholder }}" alt="{{ post.name }}" class="img-4by3-lg rounded">
							</div>
							<div class="ms-3">
								<h6 class="mb-1">
									{% if post.isOnline == true %}
										<a href="{{ path('post', {slug: post.slug}) }}" target="_blank">
											{{ post.name }}
										</a>
									{% else %}
										{{ post.name }}
									{% endif %}
								</h6>
								<p class="heading-color fw-normal small mb-2">
									{{ 'Published the'|trans }}: 
									<span class="text-primary">{{ post.createdAt ? post.createdAt | format_date('long') : '' }}</span>
								</p>
							</div>
						</div>
					</td>
					<td>
						<i class="fas fa-{{ post.type.name | lower }} fa-2x fa-fw text-primary"></i>
					</td>
                    <td>
						<span class="text-decoration-none" style="color: {{ post.category.color }}">
                            {{ post.category.name  }}
                        </span>
					</td>
					<td>
						<span class="text-decoration-none">{{ post.views }}
							{{ "views"|trans }}
                        </span>
					</td>
					<td>{{ post.updatedAt ? post.updatedAt | format_date('long') : '' }}</td>
					{#  
					<td>
						<div class="d-flex align-items-center">
							{% include "global/user-avatar.html.twig" with { user: post.author, type: "xs", class: "me-2" } %}
							<h5 class="mb-0">{{ post.author.getFullName | lower | capitalize }}</h5>
						</div>
					</td>
					#}
					<td>
						<i class="fa-solid fa-circle fa-2xs text-{{ post.stringifyStatusClass }} me-2"></i>{{ post.stringifyStatus|trans }}
						<br>
						{% if post.deletedAt %}
							<i class="fa-solid fa-circle fa-2xs text-danger-soft me-2"></i>{{ "Deleted"|trans }}
							<br>
						{% endif %}
					</td>
					<td>
						<div class="dropdown dropstart">
							<a class="btn-icon btn btn-ghost btn-sm rounded-circle" href="#" role="button" id="Dropdown1" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								<i class="fas fa-ellipsis-v"></i>
							</a>
							<div class="dropdown-menu" aria-labelledby="Dropdown1" style="">
								<span class="dropdown-header">{{ 'Settings'|trans }}</span>
								<a class="dropdown-item" href="{{ link }}">
									<i class="fas fa-pencil fa-fw dropdown-item-icon"></i>
									{{ 'Edit'|trans }}
								</a>
								<a class="dropdown-item" href="{{ path('dashboard_admin_post_view', { slug : post.slug }) }}">
									<i class="fas fa-binoculars fa-fw dropdown-item-icon"></i>
									{{ 'View'|trans }}
								</a>
                                {% if post.isOnline == true %}
                                    <a class="dropdown-item" href="{{ path('dashboard_admin_post_hide', { slug: post.slug}) }}">
                                        <i class="fas fa-eye-slash fa-fw dropdown-item-icon"></i>
                                        {{ "Offline"|trans }}
                                    </a>
                                {% else %}
                                    <a class="dropdown-item" href="{{ path('dashboard_admin_post_show', { slug: post.slug}) }}">
                                        <i class="fas fa-eye fa-fw dropdown-item-icon"></i>
                                        {{ "Online"|trans }}
                                    </a>
                                {% endif %}
                                {% if post.deletedAt %}
									<a class="dropdown-item" href="{{ path('dashboard_admin_post_restore', { slug : post.slug }) }}">
										<i class="fas fa-trash-restore fa-fw dropdown-item-icon"></i>
										{{ 'Restore'|trans }}
									</a>
                                    <a href="#" onclick="event.preventDefault(); confirm('{{ "Are you sure you want to delete this item?"|trans }}') && document.getElementById('js-post-delete-form').submit();" class="dropdown-item">
                                        <i class="fas fa-trash fa-fw dropdown-item-icon"></i>
                                        {{ 'Delete permanently'|trans }}
                                    </a>
                                    <form id="js-post-delete-form" action="{{ path('dashboard_admin_post_delete', { slug : post.slug }) }}" method="post" class="">
                                        <input type="hidden" name="_token" value="{{ csrf_token('post_deletion_' ~ post.slug) }}">
                                        <input type="hidden" name="_method" value="DELETE">
                                    </form>
                                {% else %}
									<a class="dropdown-item" href="{{ path('dashboard_admin_post_disable', { slug : post.slug }) }}">
										<i class="fas fa-times fa-fw dropdown-item-icon"></i>
										{{ 'Delete'|trans }}
									</a>
                                {% endif %}
							</div>
						</div>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<div class="card-footer bg-transparent text-end p-0">
		{{ knp_pagination_render(rows, null, {}, {'align': 'center'}) }}
	</div>
</div>
