<div class="table-responsive overflow-y-hidden">
	<table class="table mb-0 text-nowrap table-hover table-centered">
		<thead class="">
			<tr>
				<th>{{ 'Name'|trans }}</th>
				<th>{{ 'Blog posts count'|trans }}</th>
				<th>{{ 'Color'|trans }}</th>
				<th>{{ 'Last updated'|trans }}</th>
                <th>{{ 'Status'|trans }}</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for postcategory in rows %}
				{% set link = path('dashboard_admin_post_category_edit', { slug : postcategory.slug }) %}
				<tr>
					<td>
                        <div class="d-flex align-items-center">
                            <div>
                                <h6 class="mb-1">
									<a href="{{ link }}">
										{{ postcategory.name }}
									</a>
                                </h6>
                                <p class="heading-color fw-normal small mb-2">
                                    {{ 'Published the'|trans }}
                                    <span class="text-primary">{{ postcategory.createdAt ? postcategory.createdAt | format_date('long') : '' }}</span>
                                </span>
                            </div>
                        </div>
					</td> 
                    <td>
                        <span class="text-decoration-none">{{ postcategory.posts | length }}</span>
                    </td>
					<td>
						<span class="text-decoration-none" style="color: {{ postcategory.color }}">
                            {{ postcategory.name }}
                        </span>
					</td>
					<td>{{ postcategory.updatedAt ? postcategory.updatedAt | format_date('long') : '' }}</td>
					<td>
						{% if postcategory.isOnline == false %}
							<i class="fa-solid fa-circle fa-2xs text-danger me-2"></i>{{ "Offline"|trans }}
							<br>
						{% else %}
							<i class="fa-solid fa-circle fa-2xs text-success me-2"></i>{{ "Online"|trans }}
							<br>
						{% endif %}
						{% if postcategory.deletedAt %}
							<i class="fa-solid fa-circle fa-2xs text-danger-soft me-2"></i>{{ "Deleted"|trans }}
							<br>
						{% endif %}
					</td>
					<td>
						<div class="dropdown dropstart">
							<a class="btn-icon btn btn-ghost btn-sm rounded-circle" href="#" role="button" id="Dropdown1" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								<i class="fas fa-ellipsis-v"></i>
							</a>
							<div class="dropdown-menu" aria-labelledby="Dropdown1" style="">
								<span class="dropdown-header">{{ 'Settings'|trans }}</span>
								<a class="dropdown-item" href="{{ link }}">
									<i class="fas fa-pencil fa-fw dropdown-item-icon"></i>
									{{ 'Edit'|trans }}
								</a>
								<a class="dropdown-item" href="{{ path('dashboard_admin_post_category_view', { slug : postcategory.slug }) }}">
									<i class="fas fa-binoculars fa-fw dropdown-item-icon"></i>
									{{ 'View'|trans }}
								</a>
                                {% if postcategory.isOnline == true %}
                                    <a class="dropdown-item" href="{{ path('dashboard_admin_post_category_hide', { slug: postcategory.slug}) }}">
                                        <i class="fas fa-eye-slash fa-fw dropdown-item-icon"></i>
                                        {{ "Offline"|trans }}
                                    </a>
                                {% else %}
                                    <a class="dropdown-item" href="{{ path('dashboard_admin_post_category_show', { slug: postcategory.slug}) }}">
                                        <i class="fas fa-eye fa-fw dropdown-item-icon"></i>
                                        {{ "Online"|trans }}
                                    </a>
                                {% endif %}
                                {% if postcategory.deletedAt %}
									<a class="dropdown-item" href="{{ path('dashboard_admin_post_category_restore', { slug : postcategory.slug }) }}">
										<i class="fas fa-trash-restore fa-fw dropdown-item-icon"></i>
										{{ 'Restore'|trans }}
									</a>
                                    <a href="#" onclick="event.preventDefault(); confirm('{{ "Are you sure you want to delete this item?"|trans }}') && document.getElementById('js-post-category-delete-form').submit();" class="dropdown-item">
                                        <i class="fas fa-trash fa-fw dropdown-item-icon"></i>
                                        {{ 'Delete permanently'|trans }}
                                    </a>
                                    <form id="js-post-category-delete-form" action="{{ path('dashboard_admin_post_category_delete', { slug : postcategory.slug }) }}" method="post" class="">
                                        <input type="hidden" name="_token" value="{{ csrf_token('post-category_deletion_' ~ postcategory.slug) }}">
                                        <input type="hidden" name="_method" value="DELETE">
                                    </form>
                                {% else %}
									<a class="dropdown-item" href="{{ path('dashboard_admin_post_category_disable', { slug : postcategory.slug }) }}">
										<i class="fas fa-times fa-fw dropdown-item-icon"></i>
										{{ 'Delete'|trans }}
									</a>
                                {% endif %}
							</div>
						</div>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<div class="card-footer bg-transparent text-end p-0">
		{{ knp_pagination_render(rows, null, {}, {'align': 'center'}) }}
	</div>
</div>
