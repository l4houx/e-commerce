{% extends 'base.html.twig' %}

{% set pagetitle = 'Add a new post type' | trans %}
{% if type.id %}{% set pagetitle = 'Update the post type' | trans %}{% endif %}
{% block title pagetitle %}

{% block breadcrumb %}
	{% set breadcrumb = [{ "dashboard_main": ('Dashboard' | trans), "dashboard_admin_post_type_index": 'Manage posts types'|trans, "current":(pagetitle) }] %}
	{% include "global/breadcrumb.html.twig" with breadcrumb %}
{% endblock %}

{% block body %}
    <section class="pt-0">
        <div class="container">
            <div class="row">
                <div class="col-xl-9 col-lg-8 col-md-12 col-12">
                    {{ include('dashboard/admin/post/types/_form.html.twig') }}
                </div>
                <div class="col-xl-3 col-lg-4 col-md-12 col-12"></div>
            </div>
        </div>
    </section>
{% endblock %}
