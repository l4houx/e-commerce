<div class="table-responsive overflow-y-hidden">
	<table class="table mb-0 text-nowrap table-hover table-centered">
		<thead class="">
			<tr>
				<th>{{ 'Name'|trans }}</th>
				<th>{{ 'Posts count'|trans }}</th>
				<th>{{ 'Status'|trans }}</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for type in rows %}
				{% set link = path('dashboard_admin_post_type_edit', { slug : type.slug }) %}
				<tr>
					<td>{{ type.name }}</td>
					<td>{{ type.posts | length }}</td>
					<td>
						{% if type.isOnline == false %}
							<i class="fa-solid fa-circle fa-2xs text-danger me-2"></i>{{ "Offline"|trans }}
							<br>
						{% else %}
							<i class="fa-solid fa-circle fa-2xs text-success me-2"></i>{{ "Online"|trans }}
							<br>
						{% endif %}
						{% if type.deletedAt %}
							<i class="fa-solid fa-circle fa-2xs text-danger-soft me-2"></i>{{ "Deleted"|trans }}
							<br>
						{% endif %}
					</td>
					<td>
						<div class="dropdown dropstart">
							<a class="btn-icon btn btn-ghost btn-sm rounded-circle" href="#" role="button" id="Dropdown1" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								<i class="fas fa-ellipsis-v"></i>
							</a>
							<div class="dropdown-menu" aria-labelledby="Dropdown1" style="">
								<span class="dropdown-header">{{ 'Settings'|trans }}</span>
								<a class="dropdown-item" href="{{ link }}">
									<i class="fas fa-pencil fa-fw dropdown-item-icon"></i>
									{{ 'Edit'|trans }}
								</a>
								<a class="dropdown-item" href="{{ path('dashboard_admin_post_type_view', { slug : type.slug }) }}">
									<i class="fas fa-binoculars fa-fw dropdown-item-icon"></i>
									{{ 'View'|trans }}
								</a>
								{% if type.isOnline == true  %}
									<a class="dropdown-item" href="{{ path('dashboard_admin_post_type_hide', { slug : type.slug }) }}">
										<i class="fas fa-eye-slash fa-fw dropdown-item-icon"></i>
										{{ "Offline"|trans }}
									</a>
								{% else %}
									<a class="dropdown-item" href="{{ path('dashboard_admin_post_type_show', { slug : type.slug }) }}">
										<i class="fas fa-eye fa-fw dropdown-item-icon"></i>
										{{ "Online"|trans }}
									</a>
								{% endif %}
								{% if type.deletedAt %}
									<a class="dropdown-item" href="{{ path('dashboard_admin_post_type_restore', { slug : type.slug }) }}">
										<i class="fas fa-trash-restore fa-fw dropdown-item-icon"></i>
										{{ 'Restore'|trans }}
									</a>
									<a href="#" onclick="event.preventDefault(); confirm('{{ "Are you sure you want to delete this item?"|trans }}') && document.getElementById('js-type-delete-form').submit();" class="dropdown-item">
										<i class="fas fa-trash fa-fw dropdown-item-icon"></i>
										{{ 'Delete permanently'|trans }}
									</a>
									<form id="js-type-delete-form" action="{{ path('dashboard_admin_post_type_delete', { slug: type.slug}) }}" method="post" class="">
										<input type="hidden" name="_token" value="{{ csrf_token('type_deletion_' ~ type.slug) }}">
										<input type="hidden" name="_method" value="DELETE">
									</form>
								{% else %}
									<a class="dropdown-item" href="{{ path('dashboard_admin_post_type_disable', { slug : type.slug }) }}">
										<i class="fas fa-times fa-fw dropdown-item-icon"></i>
										{{ 'Delete'|trans }}
									</a>
								{% endif %}
							</div>
						</div>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
    <div class="card-footer bg-transparent text-end p-0">
        {{ knp_pagination_render(rows, null, {}, {'align': 'center'}) }}
    </div>
</div>
