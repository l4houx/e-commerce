<div class="table-responsive overflow-y-hidden">
	<table class="table mb-0 text-nowrap table-hover table-centered">
		{% if header is not defined or header != false %}
			<thead class="">
				<tr>
					<th>#{# {{ knp_pagination_sortable(rows, '#', 'u.id') }} #}</th>
					<th>{{ 'User name'|trans }}/{{ 'Email'|trans }}</th>
					<th>{{ 'Full name'|trans }}</th>
					<th>{{ 'Rating'|trans }}</th>
					<th>{{ 'Last updated'|trans }}</th>
					<th>{{ 'Status'|trans }}</th>
					<th></th>
				</tr>
			</thead>
		{% endif %}
		<tbody>
			{% for testimonial in rows %}
				{% set link = path('dashboard_admin_testimonial_edit', { slug : testimonial.slug }) %}
				<tr>
					<td>{{ testimonial.id }}</td>
					<td>
						<div class="d-flex align-items-center">
							<div>
								{% include "global/user-avatar.html.twig" with { user: testimonial.author, type: "xl" } %}
							</div>
							<div class="ms-3">
								<h6 class="mb-1">
									<a href="{{ link }}" target="_blank">
										{{ testimonial.author.username }} / {{ testimonial.author.email }}
									</a>
								</h6>
								<p class="heading-color fw-normal small mb-2">
									{{ 'Published the'|trans }}
									<span class="text-primary">
										{{ testimonial.createdAt ? testimonial.createdAt | format_date('long') : '' }}
									</span>
								</p>
							</div>
						</div>
					</td>
					<td>{{ testimonial.author.getFullName | lower | capitalize }}</td>
                    <td>
						{% include 'global/rating.html.twig' with {'rating' : testimonial.rating, 'class' : 'fs-6 align-top'} %}
                    </td>
					<td>{{ testimonial.updatedAt ? testimonial.updatedAt | format_date('long') : '' }}</td>
					<td>
						{% if testimonial.isOnline == false %}
							<i class="fa-solid fa-circle fa-2xs text-danger me-2"></i>{{ "Offline"|trans }}
							<br>
						{% else %}
							<i class="fa-solid fa-circle fa-2xs text-success me-2"></i>{{ "Online"|trans }}
							<br>
						{% endif %}
						{% if testimonial.deletedAt %}
							<i class="fa-solid fa-circle fa-2xs text-danger-soft me-2"></i>{{ "Deleted"|trans }}
							<br>
						{% endif %}
					</td>
					<td>
						<div class="dropdown dropstart">
							<a class="btn-icon btn btn-ghost btn-sm rounded-circle" href="#" role="button" id="Dropdown1" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								<i class="fas fa-ellipsis-v"></i>
							</a>
							<div class="dropdown-menu" aria-labelledby="Dropdown1" style="">
								<span class="dropdown-header">{{ 'Settings'|trans }}</span>
								<a class="dropdown-item" href="{{ link }}">
									<i class="fas fa-pencil fa-fw dropdown-item-icon"></i>
									{{ 'Edit'|trans }}
								</a>
								<a class="dropdown-item" href="{{ path('dashboard_admin_testimonial_view', { slug : testimonial.slug }) }}">
									<i class="fas fa-binoculars fa-fw dropdown-item-icon"></i>
									{{ 'View'|trans }}
								</a>
								<a href="#" onclick="event.preventDefault(); confirm('{{ "Are you sure you want to delete this item?"|trans }}') && document.getElementById('js-testimonial-delete-form').submit();" class="dropdown-item">
									<i class="fas fa-trash fa-fw dropdown-item-icon"></i>
									{{ 'Delete'|trans }}
								</a>
								<form id="js-testimonial-delete-form" action="{{ path('dashboard_admin_testimonial_delete', { slug: testimonial.slug}) }}" method="post" class="">
									<input type="hidden" name="_token" value="{{ csrf_token('testimonial_deletion_' ~ testimonial.id) }}">
									<input type="hidden" name="_method" value="DELETE">
								</form>
							</div>
						</div>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	{% if pagination is not defined or pagination != false %}
		<div class="card-footer bg-transparent text-end p-0">
			{{ knp_pagination_render(rows, null, {}, {'align': 'center'}) }}
		</div>
	{% endif %}
</div>
