{% extends 'base.html.twig' %}

{% set pagetitle = 'Configuration'|trans %}
{% block title pagetitle %}

{% block breadcrumb %}
	{% set breadcrumb = [{ "dashboard_main": ('Dashboard'|trans), "current":(pagetitle) }] %}
	{% include "global/breadcrumb.html.twig" with breadcrumb %}
{% endblock %}

{% block body %}
    <section class="pt-0">
        <div class="container">
            <div class="row">
                <div class="col-xl-9 col-lg-8 col-md-12 col-12">
                    <div class="card bg-transparent p-0">
                        <div class="card-header bg-transparent border-bottom p-0 pb-3">
                            <h6 class="mb-0">
                                {{ pagetitle }} 
                            </h6>
                        </div>
                        {{ form_start(regionalConfigurationFilter, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'} }) }}
                            <div class="card-body px-0">
                                <div>
                                    {% include "global/message.html.twig" with { type: "info", icon: "fas fa-exclamation", message: ("The fields preceded with a red * are mandatory"|trans) } %}
                                </div>
                                {{ form_widget(regionalConfigurationFilter) }}
                                <div class="row">
                                    <div class="col-12 pt-2">
                                        <button type="submit" class="btn btn-primary">{{ "Save"|trans }}</button>
                                    </div>
                                </div>
                            </div>
                        {{ form_end(regionalConfigurationFilter) }}
                    </div>
                </div>
                <div class="col-xl-3 col-lg-4 col-md-12 col-12"></div>
            </div>
        </div>
    </section>
{% endblock %}
