{% extends 'base.html.twig' %}

{% set pagetitle = 'Suspend user access'|trans %}
{% block title pagetitle %}

{% block breadcrumb %}
	{% set breadcrumb = [{ "dashboard_main": ('Dashboard' | trans), "dashboard_admin_user_index": 'Manage users'|trans, "current":(pagetitle) }] %}
	{% include "global/breadcrumb.html.twig" with breadcrumb %}
{% endblock %}

{% block body %}
    <section class="pt-0">
        <div class="container">
            <div class="row">
                <div class="col-xl-9 col-lg-8 col-md-12 col-12">
                    <div class="card bg-transparent p-0">
                        <div class="card-header bg-transparent border-bottom d-flex justify-content-between align-items-center p-0 pb-3">
                            <h6 class="card-title mb-0">
                                {{ pagetitle }} 
                            </h6>
                            <div>
                                {% if is_granted('ROLE_VERIFIED') %}
                                    <a href="{{ path('dashboard_admin_user_index') }}" class="btn btn-sm btn-outline-success me-2">
                                        {{ 'Return to list'|trans }}
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'} }) }}
                            <div class="card-body px-0">
                                <div>
                                    {% include "global/message.html.twig" with { type: "info", icon: "fas fa-ban", message: ('Do you want to suspend access to "%fullName%'|trans({'%fullName%' : user.getFullName | lower | capitalize})) } %}
                                </div>
                                {{ form_errors(form) }}
								<button type="submit" class="btn btn-primary mb-0">
                                    {{ 'Suspend'|trans }}
                                </button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
                <div class="col-xl-3 col-lg-4 col-md-12 col-12"></div>
            </div>
        </div>
    </section>
{% endblock %}
