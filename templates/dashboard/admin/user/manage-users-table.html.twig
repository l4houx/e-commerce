<div class="table-responsive overflow-y-hidden">
	<table class="table mb-0 text-nowrap table-hover table-centered">
		{% if header is not defined or header != false %}
			<thead class="">
				<tr>
					<th>#</th>
					<th>{{ 'User name / Email'|trans }}</th>
					<th>{{ 'Full name'|trans }}</th>
					<th>{{ 'Last login / IP'|trans}}</th>
					<th>{{ 'Roles'|trans }}</th>
					<th>{{ 'Status'|trans }}</th>
					<th></th>
				</tr>
			</thead>
		{% endif %}
		<tbody>
			{% for user in rows %}
				{# {% set link = path('user_profil', { slug : user.slug }) %} #}
				<tr class="{{ user.isSuspended ? "bg-light" }}">
					<td>{{ user.id }}</td>
					<td>
						<div class="d-flex align-items-center">
							<div>
								{% include "global/user-avatar.html.twig" with { user: user, type: "xl" } %}
							</div>
							<div class="ms-3">
								<h6 class="mb-1">
									<a href="{{ path('user_profil', { id : user.id }) }}" target="_blank">
										{{ user.getCrossRoleName | lower | capitalize }}
									</a>
								</h6>
								<p class="heading-color fw-normal small mb-2">
									{{ 'Published the'|trans }}: 
									<span class="text-primary">{{ user.createdAt ? user.createdAt | format_date('long') : '' }}</span>
								</p>
							</div>
						</div>
					</td>
					<td>
						{{ user.username }}
						<br>
						{{ user.email }}
					</td>
					<td>
						{% if user.lastLogin %}
							{{ user.lastLogin | format_date('long') }}
						{% else %}
							{{ "N/A"|trans }}
						{% endif %}
						<br>
						<a href="https://ipinfo.io/{{ user.lastLoginIp }}" target="_blank">{{ user.lastLoginIp }}</a>
					</td>
					<td>
						{{ user.getRole|trans|raw }}
					</td>
					<td>
						{% if user.isVerified == false %}
							<i class="fa-solid fa-circle fa-2xs text-danger me-2"></i>{{ "Disabled"|trans }}
							<br>
						{% else %}
							<i class="fa-solid fa-circle fa-2xs text-success me-2"></i>{{ "Enabled"|trans }}
							<br>
						{% endif %}
						{% if user.deletedAt %}
							<i class="fa-solid fa-circle fa-2xs text-danger-soft me-2"></i>{{ "Deleted"|trans }}
							<br>
						{% endif %}
					</td>
					<td>
                        {% if ('ROLE_ADMIN_APPLICATION' in user.roles) == false %}
                            <div class="dropdown dropstart">
                                <a class="btn-icon btn btn-ghost btn-sm rounded-circle" href="#" role="button" id="Dropdown-{{ user.id }}" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-ellipsis-v"></i>
                                </a>
                                <div class="dropdown-menu" aria-labelledby="Dropdown-{{ user.id }}" style="">
                                    <span class="dropdown-header">{{ 'Settings'|trans }}</span>
									{% if user.isSuspended == false %}
										<a href="{{ path('dashboard_admin_user_suspended_disable', { id: user.id }) }}" class="dropdown-item">
											<i class="fas fa-user-lock fa-fw dropdown-item-icon"></i>
											{{ 'Suspend disable'|trans }}
										</a>
									{% else %}
										<a href="{{ path('dashboard_admin_user_suspended_enable', { id: user.id }) }}" class="dropdown-item">
											<i class="fas fa-user-shield fa-fw dropdown-item-icon"></i>
											{{ 'Suspend enable'|trans }}
										</a>
									{% endif %}
                                    <a href="{{ path('dashboard_admin_user_reset', { id: user.id }) }}" class="dropdown-item">
                                        <i class="fas fa-key fa-fw dropdown-item-icon"></i>
                                        {{ 'Resend password'|trans }}
                                    </a>
                                    <a href="{{ path("home", {_switch_user: user.email}) }}" class="dropdown-item">
                                        <i class="fas fa-user-ninja fa-fw dropdown-item-icon"></i>
                                        {{ 'View his profile'|trans }}
                                    </a>
                                    <a href="#" onclick="event.preventDefault(); confirm('{{ "Are you sure you want to delete this item?"|trans }}') && document.getElementById('js-user-delete-form').submit();" class="dropdown-item">
                                        <i class="fas fa-times fa-fw dropdown-item-icon"></i>
                                        {{ 'Delete'|trans }}
                                    </a>
                                    <form id="js-user-delete-form" action="{{ path('dashboard_admin_user_delete', { id: user.id }) }}" method="post" class="">
                                        <input type="hidden" name="_token" value="{{ csrf_token('user_deletion_' ~ user.id) }}">
                                        <input type="hidden" name="_method" value="DELETE">
                                    </form>
                                    <a href="{{ path('dashboard_admin_user_view', { id: user.id }) }}" class="dropdown-item">
                                        <i class="fas fa-binoculars fa-fw dropdown-item-icon"></i>
                                        {{ 'View'|trans }}
                                    </a>
                                    {% if ('ROLE_EDITOR' in user.roles) == false %}
                                        <a href="{{ path('dashboard_admin_user_change_role', { id: user.id }) }}" onclick="return confirm('{{"Are you sure you want to assign the role editor to this user ?"|trans }}')" class="dropdown-item">
                                            <i class="fas fa-rotate fa-fw dropdown-item-icon"></i>
                                            {{ 'Change Role'|trans }}
                                        </a>
                                    {% else %}
                                        <a href="{{ path('dashboard_admin_user_remove_role', { id: user.id }) }}" onclick="return confirm('{{"Are you sure you want to remove the role editor to this user ?"|trans }}')" class="dropdown-item">
                                            <i class="fas fa-rotate fa-fw dropdown-item-icon"></i>
                                            {{ 'Remove Role'|trans }}
                                        </a>
                                    {% endif %}
                                    {% if user.isVerified == false %}
                                        <form action="{{ path('dashboard_admin_user_verified', { id: user.id }) }}" method="post" class="">
                                            <button class="dropdown-item" type="submit">
                                                <i class="fas fa-user-check fa-fw dropdown-item-icon"></i>
                                                {{ 'Confirm'|trans }}
                                            </button>
                                        </form>
                                    {% else %}
                                        <a class="dropdown-item" href="/?_ninja={{ user.email }}">
                                            <i class="fas fa-user-secret fa-fw dropdown-item-icon"></i>
                                            {{ 'Ninja'|trans }}
                                        </a>
                                    {% endif %}
                                </div>
                            </div>
                        {% endif %}
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	{% if pagination is not defined or pagination != false %}
		<div class="card-footer bg-transparent text-end p-0">
			{{ knp_pagination_render(rows, null, {}, {'align': 'center'}) }}
		</div>
	{% endif %}
</div>
