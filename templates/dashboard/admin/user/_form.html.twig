<div class="card bg-transparent p-0">
    <div class="card-header bg-transparent border-bottom d-flex justify-content-between align-items-center p-0 pb-3">
        <h6 class="card-title mb-0">
            {{ pagetitle }} 
            {% if app.request.attributes.get('_route') == 'dashboard_admin_user_edit' %}
                "{{ user.getFullName | lower | capitalize }}"
            {% endif %}
        </h6>
        <div>
            {% if is_granted('ROLE_VERIFIED') %}
                <a href="{{ path('dashboard_admin_user_index') }}" class="btn btn-sm btn-outline-success me-2">
                    {{ 'Return to list'|trans }}
                </a>
            {% endif %}
        </div>
    </div>
    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'} }) }}
        <div class="card-body px-0">
            <div>
                {% include "global/message.html.twig" with { type: "info", icon: "fas fa-exclamation", message: ("The fields preceded with a red * are mandatory"|trans) } %}
            </div>
            {{ form_widget(form) }}
        </div>
    {{ form_end(form) }}
</div>
