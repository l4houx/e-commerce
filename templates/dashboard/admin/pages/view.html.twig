{% extends 'base.html.twig' %}

{% set pagetitle = 'Pages '|trans ~ page.name %}
{% block title pagetitle %}

{% block breadcrumb %}
	{% set breadcrumb = [{ "dashboard_main": ('Dashboard' | trans), "dashboard_admin_page_index": 'Manage pages'|trans, "current":(pagetitle) }] %}
	{% include "global/breadcrumb.html.twig" with breadcrumb %}
{% endblock %}

{% block body %}
    <section class="pt-0">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive overflow-y-hslugden">
                        <table class="table table-borderless table-striped table-hover table-sm">
                            <thead class="">
                                <tr>
                                    <th colspan="2">
                                        <i class="fas fa-file fa-fw text-muted"></i>
                                        {{ "General information"|trans }}
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td wslugth="30%">#</th>
                                    <td>{{ page.id }}</td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Name'|trans }}</th>
                                    <td>{{ page.name }}</td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Slug'|trans }}</th>
                                    <td>{{ page.slug }}</td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Content'|trans }}</th>
                                    <td>{{ page.content | html_markdown }}</td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Link'|trans }}</th>
                                    <td>
                                        <a href="{{ path('page', { slug : page.slug }) }}" target="_blank">
                                            {{ path('page', { slug : page.slug }) }}
                                        </a>
                                    </td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Views'|trans }}</th>
                                    <td>{{ page.views }}</td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Meta title'|trans }}</th>
                                    <td>{{ page.metaTitle }}</td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Meta description'|trans }}</th>
                                    <td>{{ page.metaDescription | html_markdown | nl2br }}</td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Creation date'|trans }}</th>
                                    <td>{{ page.createdAt ? page.createdAt | localizeddate('medium', 'short', app.request.locale, date_timezone, date_format) : '' }}</td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Update date'|trans }}</th>
                                    <td>{{ page.updatedAt ? page.updatedAt | localizeddate('medium', 'short', app.request.locale, date_timezone, date_format) : '' }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="d-flex pb-3 my-3">
                        <a href="{{ path('dashboard_admin_page_index') }}" class="btn btn-sm btn-dark me-2">
                            <i class="fas fa-list fa-fw"></i>
                        </a>
                        <a href="{{ path('dashboard_admin_page_edit', {'slug': page.slug}) }}" class="btn btn-primary btn-sm me-2">
                            <i class="fas fa-pencil fa-fw"></i>
                        </a>
                        {{ include('dashboard/admin/pages/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
