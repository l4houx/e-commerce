<div class="table-responsive overflow-y-hidden">
	<table class="table mb-0 text-nowrap table-hover table-centered">
		<thead class="">
			<tr>
				<th>#</th>
				<th>{{ 'Name'|trans }}</th>
				<th>{{ 'Category'|trans }}</th>
				<th>{{ 'Views'|trans }}</th>
				<th>{{ 'Last updated'|trans }}</th>
				<th>{{ 'Status'|trans }}</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for article in rows %}
				{% set link = path('dashboard_admin_help_center_article_edit', { slug : article.slug }) %}
				<tr>
					<td>{{ article.id }}</td>
					<td>
                        <div class="d-flex align-items-center">
                            <div>
                                <h6 class="mb-1">
									<a href="{{ path('help_center_article', { slug : article.slug }) }}" target="_blank">
										{{ article.name }}
									</a>
                                </h6>
                                <p class="heading-color fw-normal small mb-2">
                                    {{ 'Published the'|trans }}
                                    <span class="text-primary">{{ article.createdAt ? article.createdAt | format_date('long') : '' }}</span>
                                </span>
                            </div>
                        </div>
					</td>
					<td>
						{% if article.category.parent %}
							{% if article.category.parent.parent %}
								{{ article.category.parent.parent.name }}
								<i class="fas fa-chevron-right"></i>
							{% endif %}
							{{ article.category.parent.name }}
							<i class="fas fa-chevron-right"></i>
						{% endif %}
						{{ article.category.name }}
					</td>
					<td>
						<span class="text-decoration-none">{{ article.views }}
							{{ "views"|trans }}
                        </span>
					</td>
					<td>
						{{ article.updatedAt ? article.updatedAt | format_date('long') : '' }}
					</td>
					<td>
						{% if article.isFeatured %}
							<i class="fa-solid fa-circle fa-2xs text-info-soft me-2"></i>{{ "Featured"|trans }}
							<br>
						{% endif %}
						{% if article.isOnline == false %}
							<i class="fa-solid fa-circle fa-2xs text-danger me-2"></i>{{ "Offline"|trans }}
							<br>
						{% else %}
							<i class="fa-solid fa-circle fa-2xs text-success me-2"></i>{{ "Online"|trans }}
							<br>
						{% endif %}
						{% if article.deletedAt %}
							<i class="fa-solid fa-circle fa-2xs text-danger-soft me-2"></i>{{ "Deleted"|trans }}
							<br>
						{% endif %}
					</td>
					<td>
						<div class="dropdown dropstart">
							<a class="btn-icon btn btn-ghost btn-sm rounded-circle" href="#" role="button" id="Dropdown1" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								<i class="fas fa-ellipsis-v"></i>
							</a>
							<div class="dropdown-menu" aria-labelledby="Dropdown1" style="">
								<span class="dropdown-header">{{ 'Settings'|trans }}</span>
								<a class="dropdown-item" href="{{ link }}">
									<i class="fas fa-pencil fa-fw dropdown-item-icon"></i>
									{{ 'Edit'|trans }}
								</a>
								<a class="dropdown-item" href="{{ path('dashboard_admin_help_center_article_view', { slug : article.slug }) }}">
									<i class="fas fa-binoculars fa-fw dropdown-item-icon"></i>
									{{ 'View'|trans }}
								</a>
								{% if article.isOnline == true %}
                                    <a class="dropdown-item" href="{{ path('dashboard_admin_help_center_article_hide', { slug : article.slug }) }}">
                                        <i class="fas fa-eye-slash fa-fw dropdown-item-icon"></i>
                                        {{ "Offline"|trans }}
                                    </a>
								{% else %}
                                    <a class="dropdown-item" href="{{ path('dashboard_admin_help_center_article_show', { slug : article.slug }) }}">
                                        <i class="fas fa-eye fa-fw dropdown-item-icon"></i>
                                        {{ "Online"|trans }}
                                    </a>
								{% endif %}
								{% if article.isFeatured == true %}
                                    <a class="dropdown-item" href="{{ path('dashboard_admin_help_center_article_notfeatured', { slug : article.slug }) }}">
                                        <i class="fas fa-thumbtack fa-fw dropdown-item-icon"></i>
                                        {{ "Mark as not featured"|trans }}
                                    </a>
								{% else %}
                                    <a class="dropdown-item" href="{{ path('dashboard_admin_help_center_article_featured', { slug : article.slug }) }}">
                                        <i class="fas fa-star fa-fw dropdown-item-icon"></i>
                                        {{ "Mark as featured"|trans }}
                                    </a>
								{% endif %}
                                {% if article.deletedAt %}
									<a class="dropdown-item" href="{{ path('dashboard_admin_help_center_article_restore', { slug : article.slug }) }}">
										<i class="fas fa-trash-restore fa-fw dropdown-item-icon"></i>
										{{ 'Restore'|trans }}
									</a>
                                    <a href="#" onclick="event.preventDefault(); confirm('{{ "Are you sure you want to delete this item?"|trans }}') && document.getElementById('js-article-delete-form').submit();" class="dropdown-item">
                                        <i class="fas fa-trash fa-fw dropdown-item-icon"></i>
                                        {{ 'Delete permanently'|trans }}
                                    </a>
                                    <form id="js-article-delete-form" action="{{ path('dashboard_admin_help_center_article_delete', { slug : article.slug }) }}" method="post" class="">
                                        <input type="hidden" name="_token" value="{{ csrf_token('article_deletion_' ~ article.slug) }}">
                                        <input type="hidden" name="_method" value="DELETE">
                                    </form>
                                {% else %}
									<a class="dropdown-item" href="{{ path('dashboard_admin_help_center_article_disable', { slug : article.slug }) }}">
										<i class="fas fa-times fa-fw dropdown-item-icon"></i>
										{{ 'Delete'|trans }}
									</a>
                                {% endif %}
							</div>
						</div>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<div class="card-footer bg-transparent text-end p-0">
		{{ knp_pagination_render(rows, null, {}, {'align': 'center'}) }}
	</div>
</div>
