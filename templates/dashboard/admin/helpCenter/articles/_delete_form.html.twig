<form method="post" action="{{ path('dashboard_admin_help_center_article_delete', {'slug': article.slug}) }}" onsubmit="return confirm('{{ "Are you sure you want to delete this item?"|trans }}');">
    <input type="hidden" name="_token" value="{{ csrf_token('article_deletion_' ~ article.slug) }}">
    <button class="btn btn-danger btn-sm">
        <i class="fas fa-trash fa-fw"></i>
    </button>
</form>
