{% extends 'base.html.twig' %}

{% set pagetitle = 'Help center articles '|trans ~ article.name %}
{% block title pagetitle %}

{% block breadcrumb %}
	{% set breadcrumb = [{ "dashboard_main": ('Dashboard' | trans), "dashboard_admin_help_center_article_index": 'Manage help center articles'|trans, "current":(pagetitle) }] %}
	{% include "global/breadcrumb.html.twig" with breadcrumb %}
{% endblock %}

{% block body %}
    <section class="pt-0">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive overflow-y-hslugden">
                        <table class="table table-borderless table-striped table-hover table-sm">
                            <thead class="">
                                <tr>
                                    <th colspan="2">
                                        <i class="fas fa-file fa-fw text-muted"></i>
                                        {{ "General information"|trans }}
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td wslugth="30%">#</th>
                                    <td>{{ article.id }}</td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Name'|trans }}</th>
                                    <td>{{ article.name }}</td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Slug'|trans }}</th>
                                    <td>{{ article.slug }}</td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Content'|trans }}</th>
                                    <td>{{ article.content | html_markdown }}</td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Category'|trans }}</th>
                                    {% if article.category.parent %}
                                        {% if article.category.parent.parent %}
                                            {{ article.category.parent.parent.name }}
                                            <i class="fas fa-chevron-right"></i>
                                        {% endif %}
                                        {{ article.category.parent.name }}
                                        <i class="fas fa-chevron-right"></i>
                                    {% endif %}
                                    <td>{{ article.category.name }}</td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Views'|trans }}</th>
                                    <td>{{ article.views }}</td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Meta title'|trans }}</th>
                                    <td>{{ article.metaTitle }}</td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Meta description'|trans }}</th>
                                    <td>{{ article.metaDescription | html_markdown | nl2br }}</td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Status'|trans }}</th>
                                    <td>
                                        {% if article.isFeatured %}
                                            <i class="fa-solid fa-circle fa-2xs text-info-soft me-2"></i>{{ "Featured"|trans }}
                                            <br>
                                        {% endif %}
                                        {% if article.isOnline == false %}
                                            <i class="fa-solid fa-circle fa-2xs text-danger me-2"></i>{{ "Offline"|trans }}
                                            <br>
                                        {% else %}
                                            <i class="fa-solid fa-circle fa-2xs text-success me-2"></i>{{ "Online"|trans }}
                                            <br>
                                        {% endif %}
                                        {% if article.deletedAt %}
                                            <i class="fa-solid fa-circle fa-2xs text-danger-soft me-2"></i>{{ "Deleted"|trans }}
                                            <br>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Creation date'|trans }}</th>
                                    <td>{{ article.createdAt ? article.createdAt | localizeddate('medium', 'short', app.request.locale, date_timezone, date_format) : '' }}</td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Update date'|trans }}</th>
                                    <td>{{ article.updatedAt ? article.updatedAt | localizeddate('medium', 'short', app.request.locale, date_timezone, date_format) : '' }}</td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Deleted date'|trans }}</th>
                                    <td>{{ article.deletedAt ? article.deletedAt | localizeddate('medium', 'short', app.request.locale, date_timezone, date_format) : '' }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="d-flex pb-3 my-3">
                        <a href="{{ path('dashboard_admin_help_center_article_index') }}" class="btn btn-sm btn-dark me-2">
                            <i class="fas fa-list fa-fw"></i>
                        </a>
                        <a href="{{ path('dashboard_admin_help_center_article_edit', {'slug': article.slug}) }}" class="btn btn-primary btn-sm me-2">
                            <i class="fas fa-pencil fa-fw"></i>
                        </a>
                        {{ include('dashboard/admin/helpCenter/articles/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
