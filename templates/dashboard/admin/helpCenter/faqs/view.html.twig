{% extends 'base.html.twig' %}

{% set pagetitle = 'Help center faqs '|trans ~ faq.question %}
{% block title pagetitle %}

{% block breadcrumb %}
	{% set breadcrumb = [{ "dashboard_main": ('Dashboard' | trans), "dashboard_admin_help_center_faq_index": 'Manage help center faqs'|trans, "current":(pagetitle) }] %}
	{% include "global/breadcrumb.html.twig" with breadcrumb %}
{% endblock %}

{% block body %}
    <section class="pt-0">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive overflow-y-hidden">
                        <table class="table table-borderless table-striped table-hover table-sm">
                            <thead class="">
                                <tr>
                                    <th colspan="2">
                                        <i class="fas fa-file fa-fw text-muted"></i>
                                        {{ "General information"|trans }}
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td width="30%">#</th>
                                    <td>{{ faq.id }}</td>
                                </tr>
                                <tr>
                                    <td width="30%">{{ 'Question'|trans }}</th>
                                    <td>{{ faq.question }}</td>
                                </tr>
                                <tr>
                                    <td width="30%">{{ 'Answer'|trans }}</th>
                                    <td>{{ faq.answer | html_markdown }}</td>
                                </tr>
                                <tr>
                                    <td width="30%">{{ 'Views'|trans }}</th>
                                    <td>{{ faq.views }}</td>
                                </tr>
                                <tr>
                                    <td width="30%">{{ 'Meta title'|trans }}</th>
                                    <td>{{ faq.metaTitle }}</td>
                                </tr>
                                <tr>
                                    <td width="30%">{{ 'Meta description'|trans }}</th>
                                    <td>{{ faq.metaDescription | html_markdown | nl2br }}</td>
                                </tr>
                                <tr>
                                    <td width="30%">{{ 'Status'|trans }}</th>
                                    <td>
                                        {% if faq.isOnline == false %}
                                            <span class="badge bg-danger">
                                                <i class="fas fa-eye-slash fa-fw"></i>
                                                {{ "Offline"|trans }}
                                            </span>
                                        {% else %}
                                            <span class="badge bg-success">
                                                <i class="fas fa-eye fa-fw"></i>
                                                {{ "Online"|trans }}
                                            </span>
                                        {% endif %}
                                        {% if faq.deletedAt %}
                                            <span class="badge bg-danger-soft">
                                                <i class="fas fa-times fa-fw"></i>
                                                {{ "Deleted"|trans }}
                                            </span>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <td width="30%">{{ 'Creation date'|trans }}</th>
                                    <td>{{ faq.createdAt ? faq.createdAt | localizeddate('medium', 'short', app.request.locale, date_timezone, date_format) : '' }}</td>
                                </tr>
                                <tr>
                                    <td width="30%">{{ 'Update date'|trans }}</th>
                                    <td>{{ faq.updatedAt ? faq.updatedAt | localizeddate('medium', 'short', app.request.locale, date_timezone, date_format) : '' }}</td>
                                </tr>
                                <tr>
                                    <td width="30%">{{ 'Deleted date'|trans }}</th>
                                    <td>{{ faq.deletedAt ? faq.deletedAt | localizeddate('medium', 'short', app.request.locale, date_timezone, date_format) : '' }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="d-flex pb-3 my-3">
                        <a href="{{ path('dashboard_admin_help_center_faq_index') }}" class="btn btn-sm btn-dark me-2">
                            <i class="fas fa-list fa-fw"></i>
                        </a>
                        <a href="{{ path('dashboard_admin_help_center_faq_edit', {'id': faq.id}) }}" class="btn btn-primary btn-sm me-2">
                            <i class="fas fa-pencil fa-fw"></i>
                        </a>
                        {{ include('dashboard/admin/helpCenter/faqs/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
