<form method="post" action="{{ path('dashboard_admin_help_center_category_delete', {'slug': category.slug}) }}" onsubmit="return confirm('{{ "Are you sure you want to delete this item?"|trans }}');">
    <input type="hidden" name="_token" value="{{ csrf_token('category_deletion_' ~ category.slug) }}">
    <button class="btn btn-danger btn-sm">
        <i class="fas fa-trash fa-fw"></i>
    </button>
</form>
