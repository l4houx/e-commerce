<div class="table-responsive overflow-y-hidden">
	<table class="table mb-0 text-nowrap table-hover table-centered">
		<thead class="">
			<tr>
                <th>#</th>
				<th>{{ 'Author'|trans}}</th>
                <th>{{ 'Content'|trans }}</th>
				<th>{{ 'IP adress'|trans }}</th>
				<th>{{ 'Status'|trans }}</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for comment in rows %}
                {# {% set link2 = path('dashboard_admin_comment_edit', { id : comment.id }) %} #}
				<tr>
                    <td>{{ comment.id }}</td>
					<td>
						<div class="d-flex align-items-center">
							<div>
								{% include "global/user-avatar.html.twig" with { user: comment.author, type: "xl" } %}
							</div>
							<div class="ms-3">
								<h6 class="mb-1">
									<a href="{{ path('user_profil', { slug : comment.author.slug }) }}" target="_blank">
										{{ comment.author.username }}
									</a>
								</h6>
								<p class="heading-color fw-normal small mb-2">
									{{ 'Published the'|trans }}
									<span class="text-primary">
										{{ comment.publishedAt ? comment.publishedAt | format_date('long') : '' }}
									</span>
								</p>
							</div>
						</div>
					</td>
                    <td>
                        {% set link = path('post', { slug : comment.post.slug } , "#c" ~ comment.id) %}
						<a href="{{ link }}" target="_blank">
							<div class="mt-4">
								<div>
									<span class="mb-1 text-primary">
										{{ "Article"|trans ~ ": " ~ comment.post }}
									</span>
                                    <p class="heading-color fw-normal small mb-2">
                                        {{ 'Description :'|trans }}
                                        {{ comment.content | html_markdown_excerpt(40) }}
                                    </p>
								</div>
							</div>
						</a>
					</td>
					<td>
						<a href="https://ipinfo.io/{{ comment.ip }}" target="_blank">{{ comment.ip }}</a>
						{% if comment.ip %}
							{{ ipService.getLocation(comment.ip).emoji ?? '' }}
						{% endif %}
                    </td>
					<td>
						{% if comment.isApproved == false %}
							<span class="badge bg-danger">
								<i class="fas fa-eye-slash fa-fw"></i>
								{{ "Refused"|trans }}
							</span>
						{% else %}
							<span class="badge bg-success">
								<i class="fas fa-eye fa-fw"></i>
								{{ "Approved"|trans }}
							</span>
						{% endif %}
						{% if comment.isRGPD == false %}
							<span class="badge bg-warning-soft">
								<i class="fas fa-circle-xmark fa-fw"></i>
								{{ "Disabled rgpd"|trans }}
							</span>
						{% else %}
							<span class="badge bg-secondary-soft">
								<i class="fas fa-circle-check fa-fw"></i>
								{{ "Enabled rgpd"|trans }}
							</span>
						{% endif %}
					</td> 
					<td>
						<div class="dropdown dropstart">
							<a class="btn-icon btn btn-ghost btn-sm rounded-circle" href="#" role="button" id="Dropdown1" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								<i class="fas fa-ellipsis-v"></i>
							</a>
							<div class="dropdown-menu" aria-labelledby="Dropdown1" style="">
								<span class="dropdown-header">{{ 'Settings'|trans }}</span>
                                {#
								<a class="dropdown-item" href="{{ link2 }}">
									<i class="fas fa-pencil fa-fw dropdown-item-icon"></i>
									{{ 'Edit'|trans }}
								</a>
                                #}
                                {% if comment.isApproved == true %}
                                    <a class="dropdown-item" href="{{ path('dashboard_admin_comment_hide', { id : comment.id }) }}">
                                        <i class="fas fa-eye-slash fa-fw dropdown-item-icon"></i>
                                        {{ "Refused"|trans }}
                                    </a>
                                {% else %}
                                    <a class="dropdown-item" href="{{ path('dashboard_admin_comment_show', { id : comment.id }) }}">
                                        <i class="fas fa-eye fa-fw dropdown-item-icon"></i>
                                        {{ "Approved"|trans }}
                                    </a>
                                {% endif %}
								<a href="#" onclick="event.preventDefault(); confirm('{{ "Are you sure you want to delete this item?"|trans }}') && document.getElementById('js-comment-delete-form').submit();" class="dropdown-item">
									<i class="fas fa-trash fa-fw dropdown-item-icon"></i>
									{{ 'Delete'|trans }}
								</a>
								<form id="js-comment-delete-form" action="{{ path('dashboard_admin_comment_delete', {id: comment.id}) }}" method="post" class="">
									<input type="hidden" name="_token" value="{{ csrf_token('comment_deletion_' ~ comment.id) }}">
									<input type="hidden" name="_method" value="DELETE">
								</form>
							</div>
						</div>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<div class="card-footer bg-transparent text-end p-0">
		{{ knp_pagination_render(rows, null, {}, {'align': 'center'}) }}
	</div>
</div>
