{% extends 'base.html.twig' %}

{% set pagetitle = 'Comments '|trans ~ comment.author.username %}
{% block title pagetitle %}

{% block breadcrumb %}
	{% set breadcrumb = [{ "dashboard_main": ('Dashboard' | trans), "dashboard_admin_comment_index": 'Manage comments'|trans, "current":(pagetitle) }] %}
	{% include "global/breadcrumb.html.twig" with breadcrumb %}
{% endblock %}

{% block body %}
    <section class="pt-0">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive overflow-y-hslugden">
                        <table class="table table-borderless table-striped table-hover table-sm">
                            <thead class="">
                                <tr>
                                    <th colspan="2">
                                        <i class="fas fa-file fa-fw text-muted"></i>
                                        {{ "General information"|trans }}
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td wslugth="30%">#</th>
                                    <td>{{ comment.id }}</td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Location'|trans }}</th>
                                    <td>
                                        <a href="https://ipinfo.io/{{ comment.ip }}" target="_blank">{{ comment.ip }}</a>
                                        {% if comment.ip %}
                                            {{ ipService.getLocation(comment.ip).emoji ?? '' }}
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Avatar'|trans }}</th>
                                    <td>{% include "global/user-avatar.html.twig" with { user: comment.author, type: "xl" } %}</td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Full name'|trans }}</th>
                                    <td>{{ comment.author.getFullName | lower | capitalize }}</td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Author'|trans }}</th>
                                    <td>
                                        <a href="{{ path('user_profil', { id : comment.author.id }) }}" target="_blank">
                                            {{ comment.author.username }}
                                        </a>
                                    </td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Article'|trans }}</th>
                                    <td>
                                        <a href="{{ path('post', { slug : comment.post.slug } , "#c" ~ comment.id) }}" target="_blank">
                                            {{ "Article"|trans ~ ": " ~ comment.post }}
                                        </a>
                                    </td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Content'|trans }}</th>
                                    <td>{{ comment.content | html_markdown }}</td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Status'|trans }}</th>
                                    <td>
                                        {% if comment.isApproved == false %}
                                            <i class="fa-solid fa-circle fa-2xs text-danger me-2"></i>{{ "Refused"|trans }}
                                            <br>
                                        {% else %}
                                            <i class="fa-solid fa-circle fa-2xs text-success me-2"></i>{{ "Approved"|trans }}
                                            <br>
                                        {% endif %}
                                        {% if comment.isRGPD == false %}
                                            <i class="fa-solid fa-circle fa-2xs text-warning me-2"></i>{{ "Disabled rgpd"|trans }}
                                            <br>
                                        {% else %}
                                            <i class="fa-solid fa-circle fa-2xs text-secondary me-2"></i>{{ "Enabled rgpd"|trans }}
                                            <br>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <td wslugth="30%">{{ 'Published date'|trans }}</th>
                                    <td>{{ comment.publishedAt ? comment.publishedAt | localizeddate('medium', 'short', app.request.locale, date_timezone, date_format) : '' }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="d-flex pb-3 my-3">
                        <a href="{{ path('dashboard_admin_comment_index') }}" class="btn btn-sm btn-dark me-2">
                            <i class="fas fa-list fa-fw"></i>
                        </a>
                        <a href="" class="btn btn-primary btn-sm me-2">
                            <i class="fas fa-pencil fa-fw"></i>
                        </a>
                        {{ include('dashboard/admin/comment/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
